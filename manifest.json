{
  "manifest_version": 3,
  "name": "Sci-Lighter: Advanced Page Annotator",
  "version": "1.1.9",
  "description": "A Manifest V3 compliant high-performance annotation and sketching tool for researchers.",
  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "action": {
    "default_title": "Open Sci-Lighter"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["loader.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}